       		<!-- Perform maven releases -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <!-- rmed assembly:assembly javadoc:javadoc  -->
          <goals>clean install -P notest</goals>
