<jnlp spec="1.0+" href="$outputFile">
 <information>
    <title>$project.Name</title>
    <vendor>$project.Version</vendor>
    <homepage href="http://www.nongnu.org/pulsefire/"/>
    <description kind="one-line">PulseFire</description>
    <description kind="short">Pulsefire - iets</description>
    <description kind="tooltip">PulseFire - todo</description>
    <icon href="http://www.nongnu.org/pulsefire/" kind="default"/>
    <shortcut online="false"><desktop/><menu submenu="PulseFire"/></shortcut>
 </information>
 <security>
	 <all-permissions/>
 </security>
 <resources>
    <j2se version="1.7+" initial-heap-size="64m" max-heap-size="256m" />
    <property name="jnlp.versionEnabled" value="true"/>
    <property name="jnlp.packEnabled" value="true"/>
    $dependencies.replaceAll("<jar href=\"pulsefire-rxtx(.*)\"/>", "")
    <jar href="pulsefire-rxtx-lib-0.0.1-SNAPSHOT.jar"/>
    <resources os="Windows" arch="x86">
      <nativelib href="pulsefire-rxtx-windows-x86-${${project}.Version}.jar" />
    </resources>
    <resources os="Windows" arch="x86_64">
      <nativelib href="pulsefire-rxtx-windows-x86_64-$project.Version.jar" />
    </resources>
    <resources os="Mac OS X" >
      <nativelib href="pulsefire-rxtx-mac-10.5-${${project}.Version}.jar" />
    </resources>
    <resources os="Linux" arch="i386">
      <nativelib href="pulsefire-rxtx-linux-x86-${project.Version}.jar" />
    </resources>
    <resources os="Linux" arch="i686">
      <nativelib href="pulsefire-rxtx-linux-x86-${project.Version}.jar" />
    </resources>
    <resources os="Linux" arch="X86_64">
      <nativelib href="pulsefire-rxtx-linux-x86_64-${project.Version}.jar" />
    </resources>
 </resources>
 <application-desc main-class="$mainClass">
 </application-desc>
</jnlp>